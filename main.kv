#:import MeshLinePlot kivy_garden.graph.MeshLinePlot
<MenuScreen>:
  canvas.before:
    Color:
      rgba: (0/255, 122/255, 204/255, 1)  # Azul claro
    Rectangle:
      pos: self.pos
      size: self.size
  FloatLayout:
    BoxLayout:
      size_hint: None, None
      size: self.minimum_size
      pos_hint: {'center_x': 0.5, 'center_y': 0.5}
      padding: 10
      spacing: 40
      Button:
        text: 'V'
        font_size: 100
        on_press: root.manager.current = 'voltimetro'
        size: 300,300
        size_hint: None, None
        pos_hint: {'center_y': 0.5, 'center_x': 0.5}
        background_color: 0,0,0,0.3
      Button:
        text: 'Î©'
        font_size: 100
        on_press: root.manager.current = 'ohmimetro'
        size: 300,300
        size_hint: None, None
        pos_hint: {'center_y': 0.5, 'center_x': 0.5}
        background_color: 0, 0, 0, 1 
        background_color: 0,0,0,0.3
      Button:
        text: 'A'
        font_size: 100
        on_press: root.manager.current = 'amperimetro'
        size: 300,300
        size_hint: None, None
        background_color: 0, 0, 0, 1 
        pos_hint: {'center_y': 0.5, 'center_x': 0.5}
        background_color: 0,0,0,0.3
<Voltimetro>:
  canvas.before:
    Color:
      rgba: (0/255, 122/255, 204/255, 1)  # Azul claro
    Rectangle:
      pos: self.pos
      size: self.size
  FloatLayout:
    BotaoVoltar:
      on_press: root.manager.current = 'menu'
      pos_hint: {'center_y': 0.9, 'center_x': 0.1}
    Label:
      text: root.leitura
      font_size: 80
<Ohmimetro>:
  canvas.before:
    Color:
      rgba: (0/255, 122/255, 204/255, 1)  # Azul claro
    Rectangle:
      pos: self.pos
      size: self.size
  FloatLayout:
    BotaoVoltar:
      on_press: root.manager.current = 'menu'
      pos_hint: {'center_y': 0.9, 'center_x': 0.1}
    Label:
      text: root.leitura
      font_size: 80
<Amperimetro>:
  canvas.before:
    Color:
      rgba: (0/255, 122/255, 204/255, 1)  # Azul claro
    Rectangle:
      pos: self.pos
      size: self.size
  FloatLayout:
    BotaoVoltar:
      on_press: root.manager.current = 'menu'
      pos_hint: {'center_y': 0.9, 'center_x': 0.1}
    BoxLayout:
      padding: 50
      orientation:'vertical'
      Label:
        text: root.leitura
        font_size: 50
      Graph:
        id: graph_test
        plot: MeshLinePlot
        xlabel:'TEMPO'
        ylabel:'CORRENTE'
        x_ticks_minor:5
        x_tics_major:25
        y_ticks_major:1
        y_grid_label:True
        x_grid_label:True
        padding:5
        x_grid:True
        y_grid:True
        xmin:-0
        xmax:100
        ymin:-3.5
        ymax:3.5
        size: root.width , root.height

<BotaoVoltar@Button>
  size: 100,50
  size_hint: None, None
  text: 'VOLTAR'
  font_size: 20
  background_color: (0,0,0,0)
  background_normal:''
  canvas.before:
    Color:
      rgba: (0,0,0,0.3)
    RoundedRectangle:
      size: self.size
      pos: self.pos
      radius: [20]
